<launch>
  <master auto="start"/>
  <!-- Map File -->
  <arg name="map_file" default="$(find pc2l)/maps/tutorial.yaml"/>
  
  <!-- Map Server -->
  <!-- Publish: /map, /map_metadata -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" />
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(find agilex_scout_mini)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find agilex_scout_mini)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />

    <rosparam file="$(find agilex_scout_mini)/params/odom_nav_params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find agilex_scout_mini)/params/odom_nav_params/global_costmap_params.yaml" command="load" />

    <rosparam file="$(find agilex_scout_mini)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find agilex_scout_mini)/params/move_base_params.yaml" command="load" />

    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
    <remap from="odom" to="odom" />

    <!-- Remap to the topic corresponding to twist_mux_topics.yaml -->
    <remap from="cmd_vel" to="cmd_vel/nav" />
  </node>

</launch> 
